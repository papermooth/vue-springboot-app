[mysqld]
# 服务器ID，必须唯一（从节点不能与主节点相同）
server-id=2

# 启用中继日志
relay-log=mysql-relay-bin

# 只读设置（可选，建议从节点设置为只读）
read-only=1

# 忽略复制的数据库（可选）
# replicate-ignore-db=information_schema
# replicate-ignore-db=mysql
# replicate-ignore-db=performance_schema
# replicate-ignore-db=sys

# 要复制的数据库（可选）
# replicate-do-db=${MYSQL_DATABASE:-vue_springboot_db}

# 保存中继日志的天数
relay_log_purge=1

# 跳过复制错误（生产环境慎用）
# slave-skip-errors=1062

# 从服务器也开启二进制日志（用于级联复制或故障转移）
log-bin=mysql-slave-bin

# 从服务器是否将更新写入二进制日志
log-slave-updates=1