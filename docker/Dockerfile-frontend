# 构建阶段
FROM node:16-alpine as build

WORKDIR /app

# 复制依赖文件并安装
COPY ../frontend/package*.json ./
RUN npm install

# 复制源代码并构建
COPY ../frontend .
RUN npm run build

# 部署阶段
FROM nginx:alpine

# 复制构建产物到Nginx目录
COPY --from=build /app/dist /usr/share/nginx/html

# 复制自定义Nginx配置
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

# 设置端口
EXPOSE 80

# 启动Nginx
CMD ["nginx", "-g", "daemon off;"]